{
  "name": "comment-rollup",
  "version": "0.0.1",
  "description": "Rolls up all comments on an issue into the issue body under a details tag.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "fix": "eslint **/*.ts --fix && prettier --write '**/*.ts'",
    "package": "ncc build src/main.ts --source-map --license licenses.txt",
    "test": "jest --coverage --",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "run": "npx tsx src/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benbalter/comment-rollup.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benbalter/comment-rollup/issues"
  },
  "homepage": "https://github.com/benbalter/comment-rollup#readme",
  "dependencies": {
    "@actions/artifact": "^2.1.4",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/plugin-paginate-graphql": "^5.1.0",
    "dotenv": "^16.4.5",
    "html-to-docx": "^1.8.0",
    "octokit": "^3.1.2",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4",
    "vfile": "^6.0.1",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@faker-js/faker": "^8.4.1",
    "@octokit/types": "^12.6.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vercel/ncc": "^0.38.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43",
    "eslint-plugin-github": "^4.10.2",
    "fetch-mock": "^9.11.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": ">=3.3.1, <5.5.0"
  },
  "resolutions": {
    "xmlbuilder2": "^3.0.2"
  },
  "overrides": {
    "xmlbuilder2": "^3.1.1"
  },
  "type": "module"
}
