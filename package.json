{
  "name": "comment-rollup",
  "version": "0.0.1",
  "description": "Rolls up all comments on an issue into the issue body under a details tag.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "fix": "eslint **/*.ts --fix && prettier --write '**/*.ts'",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "run": "npx tsx src/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benbalter/comment-rollup.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benbalter/comment-rollup/issues"
  },
  "homepage": "https://github.com/benbalter/comment-rollup#readme",
  "dependencies": {
    "@actions/artifact": "^1.1.2",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/plugin-paginate-graphql": "^4.0.0",
    "dotenv": "^16.3.1",
    "html-to-docx": "^1.8.0",
    "octokit": "^3.1.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.2",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vercel/ncc": "^0.38.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.45.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-github": "^4.9.0",
    "eslint-plugin-jest": "^27.4.2",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": ">=3.3.1, <4.9.0"
  }
}
