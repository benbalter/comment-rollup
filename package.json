{
  "name": "comment-rollup",
  "version": "0.0.1",
  "description": "Rolls up all comments on an issue into the issue body under a details tag.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benbalter/comment-rollup.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benbalter/comment-rollup/issues"
  },
  "homepage": "https://github.com/benbalter/comment-rollup#readme",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vercel/ncc": "^0.34.0",
    "babel-jest": "^28.0.0",
    "eslint": "^8.22.0",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^26.8.7",
    "jest": "^28.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.0",
    "typescript": ">=3.3.1, <4.8.0"
  }
}
